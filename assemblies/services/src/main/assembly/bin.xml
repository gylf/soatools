<assembly>
  <!--  <id>services</id> -->
  <formats>
    <format>zip</format>
    <format>tar.bz2</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/scripts</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>/esb</outputDirectory>
      <includes>
		<include>de.objectcode.soatools.utils:soatools-utils-generic:esb</include>	
        <include>de.objectcode.soatools.model:soatools-model-mfm:esb</include>
        <include>de.objectcode.soatools.logging:soatools-logging-logstore:esb</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>/jbm</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>*.xml</include>
        </includes>
      </unpackOptions>
      <includes>
        <include>de.objectcode.soatools.logging:soatools-logging-logstore:jar:jbm-service</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>/war</outputDirectory>
      <includes>
        <include>de.objectcode.soatools.logging:soatools-logging-logstore-ui:war</include>
        <include>de.objectcode.soatools.logging:soatools-logging-logstore-ws:war</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>